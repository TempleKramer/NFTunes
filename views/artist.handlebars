<main>
    <section class="section explore" id="explore">
        <div class="container">
            <div class="title-wrapper">
                <h2 class="h2 section-title">Explore</h2>
            </div>

            {{#if loggedIn}}
            {{!-- <ul class="grid-list">
                {{#each artist-detail.handlebars}}
                {{> artist-detail}}
                {{/each}}
            </ul> --}}
            {{#each artistData}}
            <ul class="grid-list">
                <li>
                    <div class="card explore-card">
                        <figure class="card-banner">
                            <a href="#">
                            <img src="{{image}}" width="600" height="600" alt="{{image.description}}" class="img-cover">
                            </a>
                        </figure>
                        
                        <h3 class="h3 artist-title">
                        <a href="">{{name}}</a>
                        </h3>

                        <div class="award">
                            <span class="awards">{{awards}}</span>
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </section>
</main>

{{else}}
<a href="/public/js/login.js">You must login first to view NFTs</a>
{{/if}}