
<section class="hero" id="home">
  <div class="container">
    <h2 class="h1 hero-title">POP ARTISTS</h2>
      <p class="hero-text">
        Explore NTF's from POP artists
      </p>
  </div>
</section>
<main>
    <section class="section explore" id="explore">
        <div class="container">
            <div class="title-wrapper">
                <h2 class="h2 section-title">Explore</h2>
            </div>

             <ul class="grid-list">
                {{#each artist}}

                {{else}}
                <p>There are no artists</p>
                {{/each}}
                <li>
                    <div class="card explore-card">
                        <figure class="card-banner">
                            <a href="#">
                            <img src="{{image}}" width="600" height="600" alt="{{image.description}}" class="img-cover">
                            </a>
                        </figure>
                        
                        <h3 class="h3 artist-title">
                        <a href="">{{name}}</a>
                        </h3>

                        <div class="award">
                            <span class="awards">{{awards}}</span>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </section>
</main>

